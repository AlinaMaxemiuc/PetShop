@model exp.Template.Infrastructure.Entities.Utilizator

<h2>Editare Utilizator</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Nume:</label>
        <input asp-for="Nume" />
    </div>
    <div>
        <label>Prenume:</label>
        <input asp-for="Prenume" />
    </div>
    <div>
        <label>Email:</label>
        <input asp-for="Email" type="email" />
    </div>
    <div>
        <label>Parola:</label>
        <input asp-for="Parola" type="password" />
    </div>
    <button type="submit">Salveaza</button>
</form>
<a asp-action="Index" asp-controller="Utilizator">Inapoi la lista</a>
