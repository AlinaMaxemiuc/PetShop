@model exp.Template.Infrastructure.Entities.Abonament

<h2>Editare Abonament</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Utilizator:</label>
        <input asp-for="IdUtilizator" />
    </div>
    <div>
        <label>Hrana:</label>
        <input asp-for="IdHrana" />
    </div>
    <div>
        <label>Frecventa:</label>
        <input asp-for="Frecventa" type="number" />
    </div>
    <div>
        <label>Data incepere:</label>
        <input asp-for="DataIncepere" type="date" />
    </div>
    <div>
        <label>Data sfarsit:</label>
        <input asp-for="DataSfarsit" type="date" />
    </div>
    <button type="submit">Salveaza</button>
</form>
<a asp-action="Index" asp-controller="Abonament">Inapoi la lista</a>
