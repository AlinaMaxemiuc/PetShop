@model exp.Template.Infrastructure.Entities.Animale

<h2>Editare Animal</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Gen:</label>
        <input asp-for="Gen" />
    </div>
    <div>
        <label>Specie:</label>
        <input asp-for="Specie" />
    </div>
    <div>
        <label>Varsta:</label>
        <input asp-for="Varsta" type="number" />
    </div>
    <div>
        <label>Greutate:</label>
        <input asp-for="Greutate" type="number" step="0.01" />
    </div>
    <button type="submit">Salveaza</button>
</form>
<a asp-action="Index" asp-controller="Animal">Inapoi la lista</a>
